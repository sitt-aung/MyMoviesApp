<?xml version="1.0" encoding="utf-8"?>
<com.sa.mymoviedb.views.viewpods.ShowcaseViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1E2634">

    <org.mmtextview.components.MMTextView
        android:id="@+id/lbl_showcases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOWCASES"
        android:textColor="#454D5C"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <org.mmtextview.components.MMTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MORE SHOWCASES"
        android:textColor="#454D5C"
        android:gravity="end"
        android:layout_toEndOf="@id/lbl_showcases"
        android:layout_marginRight="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginLeft="@dimen/margin_medium_2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_showcases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:listitem="@layout/item_showcase"
        android:layout_marginTop="@dimen/margin_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_below="@id/lbl_showcases"/>

</com.sa.mymoviedb.views.viewpods.ShowcaseViewPod>