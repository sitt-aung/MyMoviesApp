<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E2634"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.mmtextview.components.MMTextView
        android:id="@+id/tv_one"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Check Movies ShowTimes"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/full_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.mmtextview.components.MMTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium_3"
        app:layout_constraintTop_toBottomOf="@id/tv_one"
        android:text="@string/txt_seemore"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_regular_2x"
        android:paddingBottom="@dimen/margin_medium_3"
        android:paddingTop="@dimen/margin_medium_3"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_large"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>